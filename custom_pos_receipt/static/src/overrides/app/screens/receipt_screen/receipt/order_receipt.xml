<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">

        <xpath expr="//div[@t-if='props.data.company.website']" position="after">
            <div t-if="props.data.company.company_registry" t-esc="props.data.company.company_registry" />
        </xpath>

        <xpath expr="//div[text()='Served by / خدم بواسطة ']" position="attributes">
            <attribute name="class">invisible</attribute>
        </xpath>
        
        <xpath expr="//div[text()='Served by / خدم بواسطة ']" position="before">
            <div class="mb-6">Seller / البائع<t t-esc="props.data.cashier"/></div>
        </xpath>
    
    </t>
</templates>
